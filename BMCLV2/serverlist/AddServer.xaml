<Window x:Class="BMCLV2.serverlist.AddServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="服务器详情" Height="225" Width="300">
    <Grid>
        <Label Content="服务器名" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <Label Content="地       址" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkIsHide" Content="隐藏地址" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="确定" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="99" Height="50" IsDefault="True" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="183,135,0,0" VerticalAlignment="Top" Width="99" Height="50" IsCancel="True" Click="btnCancel_Click"/>
        <TextBox x:Name="txtServerName" HorizontalAlignment="Left" Height="23" Margin="73,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="23" Margin="74,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>

    </Grid>
</Window>
